    <%- include('./partials/header') %> 
    <link rel="stylesheet" href="./css/login.css">
    <title>Login</title>
    
<body>
    <%- include('./partials/navbar') %> 
    <div class="login-container">
        <form action="/user-login" class="form" method="POST">
            <div class="row">
                <div class="form-header">User Portal</div>
                <div class="col-md-12 mt-2">
                    <% if (messages.error) { %>
                        <label for="username" class="form-label" style="color:red"><%= messages.error %> </label>
                    <% } else {%>
                        <label for="username" class="form-label">Username</label>
                    <% } %>
                    
                    <input required name="username" id="username" type="text" class="form-control" placeholder="Username">
                </div>
                <div class="col-md-12 mt-4">
                    <label for="password" class="form-label">Password</label>
                    <input required name="password" id="password" type="password" class="form-control" placeholder="Password">
                </div>
                <button class="btn btn-dark mt-4 but">Submit</button>
                
            </div>
            <hr class="mt-4">
            <div>
                <p class="form-text text-center">Dont have an account yet?
                    <a href="/user-registration">Register</a> here
                </p>
            </div>
        </form>
    </div>
</body>
</html>